script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous") 
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous")
body
        div.wrapper


include ./include/navbar

section.main-container
    div(id="image").location 
        h1(style="color: white; margin: 10px 20px 30px 40px;")#image Add Movie
            form(action="/add" method="POST")
                .form-group.row
                    label(for="name" style="color: white; margin: 10px 0 30px 0;").col-sm-4.col-form-label Name
                    .col-sm-8
                        input#name.form-control(type="text", name="name")
                .form-group.row
                    label(for="description" style="color: white; margin: 10px 0 30px 0;").col-sm-4.col-form-label Description
                    .col-sm-8
                        input#description.form-control(type="text", name="description")
                .form-group.row
                    label(for="categoryid" style="color: white; margin: 10px 0 30px 0;").col-sm-4.col-form-label Category Name
                    .col-sm-8
                        select(name="categoryId").form.control#categoryId
                            option(value="-1") Select Category
                                each categories in category 
                                    option(value=`${categories.id}`) #{categories.name}
                .form-group.row
                    label(for="image" style="color: white; margin: 10px 0 30px 0;").col-sm-4.col-form-label Image Url
                    .col-sm-8
                        input#image.form-control(type="text", name="image")
                .form-group.row
                    .col-sm-10.offset-sm-2
                        input(type="submit" style="margin: 10px 0 30px 0;" value="Save Movie").btn.btn-primary




include ./include/footer

